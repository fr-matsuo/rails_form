<%= form_for @account, :url => {:action => 'new'} do |f| %>
  <% [:first_name, :last_name, :sex, :post_first, :post_last, :prefecture, :email, :hobby, :other_hobby, :opinion].each do |attr| %>
    <%= f.hidden_field attr %>
  <% end %>
  <%= f.submit '戻る' %>
<% end %>

